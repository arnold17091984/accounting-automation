# =============================================================================
# Accounting Automation System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_ENCRYPTION_KEY=<generate-with: openssl rand -hex 32>
WEBHOOK_URL=https://n8n.yourdomain.com

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=accounting_automation
POSTGRES_USER=accounting
POSTGRES_PASSWORD=<strong-password-here>

# -----------------------------------------------------------------------------
# Claude API (Anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# -----------------------------------------------------------------------------
# QuickBooks Online API
# -----------------------------------------------------------------------------
# Register at: https://developer.intuit.com
QB_CLIENT_ID=<qb-client-id>
QB_CLIENT_SECRET=<qb-client-secret>
QB_REALM_ID=<qb-company-id>
QB_REDIRECT_URI=https://n8n.yourdomain.com/qb/callback
QB_REFRESH_TOKEN=<stored-in-n8n-credentials>
# QB Environment: sandbox or production
QB_ENVIRONMENT=production

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
# Create bot at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=<bot-token-from-botfather>
TELEGRAM_WEBHOOK_SECRET=<generate-with: openssl rand -hex 16>
# Comma-separated Telegram user IDs for admin notifications
TELEGRAM_ADMIN_IDS=123456789,987654321

# -----------------------------------------------------------------------------
# Google Services
# -----------------------------------------------------------------------------
# Service account for Google Drive access
GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/service-account.json
GOOGLE_DRIVE_FOLDER_ID=<shared-drive-folder-id>

# Google Sheets for data sources (optional)
GOOGLE_SHEETS_SOLAIRE_ID=<spreadsheet-id>
GOOGLE_SHEETS_COD_ID=<spreadsheet-id>

# -----------------------------------------------------------------------------
# UnionBank API (if available)
# -----------------------------------------------------------------------------
UB_CLIENT_ID=<ub-client-id>
UB_CLIENT_SECRET=<ub-client-secret>
UB_PARTNER_ID=<ub-partner-id>
UB_API_BASE_URL=https://api.unionbankph.com

# -----------------------------------------------------------------------------
# BDO (manual/RPA - credentials stored separately for security)
# -----------------------------------------------------------------------------
# BDO credentials should be stored in n8n credential store, not here

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Timezone for scheduling
TZ=Asia/Manila

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Feature flags
ENABLE_AUTO_APPROVE_UNDER_10K=true
ENABLE_BUDGET_LEARNING_MODE=true
ENABLE_ANOMALY_DETECTION=true

# Thresholds
ANOMALY_THRESHOLD_PERCENT=30
LOW_CONFIDENCE_THRESHOLD=0.7
